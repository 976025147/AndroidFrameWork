<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:imeOptions">flagNoExtractUi</item>
        <item name="android:overScrollMode">never</item>
        <item name="android:windowAnimationStyle">@style/activityAnimation</item>
    </style>

    <style name="activityAnimation" parent="@android:style/Animation">
        <item name="android:activityOpenEnterAnimation">@anim/fragment_slide_right_in</item>
        <item name="android:activityOpenExitAnimation">@anim/fragment_slide_left_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/fragment_slide_left_in</item>
        <item name="android:activityCloseExitAnimation">@anim/fragment_slide_right_out</item>
    </style>

    <style name="MyDialog" parent="@android:style/Theme.Holo.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowSoftInputMode">stateHidden</item><!--打开的时候不会弹出键盘-->
    </style>


    <style name="SplashTheme" parent="AppTheme">

    </style>

